<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.IStockInventoryManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/inventory_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/inventory_secondary</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@color/inventory_primary</item>
    </style>

    <style name="Theme.IStockInventoryManager" parent="Base.Theme.IStockInventoryManager" />

    <!-- Splash screen theme -->
    <style name="Theme.IStock.Splash" parent="Theme.SplashScreen">
        <!-- Background color of the splash -->
        <item name="windowSplashScreenBackground">@color/inventory_primary</item>

        <!-- Logo icon (replace with your actual drawable name if different) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>

        <!-- Optional: set duration for exit animation (optional polish) -->
        <!-- <item name="postSplashScreenAnimationDuration">300</item> -->

        <!-- App theme to apply after splash is done -->
        <item name="postSplashScreenTheme">@style/Theme.IStockInventoryManager</item>
    </style>

</resources>
